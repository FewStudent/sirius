<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.laky.sirius.admin.dao.LoginLogDao">
    <resultMap id="BaseResultMap" type="club.laky.sirius.admin.entity.LoginLog">
        <!--@Table login_log-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="msg" column="msg" jdbcType="VARCHAR"/>
        <result property="uId" column="u_id" jdbcType="INTEGER"/>
        <result property="succeed" column="succeed" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="OTHER"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               msg,
               u_id,
               succeed,
               create_time
        from shop_mall.login_log
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select id,
               msg,
               u_id,
               succeed,
               create_time
        from shop_mall.login_log limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        id, msg, u_id, succeed, create_time
        from shop_mall.login_log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="msg != null and msg != ''">
                and msg = #{msg}
            </if>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
            <if test="succeed != null and succeed != ''">
                and succeed = #{succeed}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into shop_mall.login_log(msg, u_id, succeed, create_time)
        values (#{msg}, #{uId}, #{succeed}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update shop_mall.login_log
        <set>
            <if test="msg != null and msg != ''">
                msg = #{msg},
            </if>
            <if test="uId != null">
                u_id = #{uId},
            </if>
            <if test="succeed != null and succeed != ''">
                succeed = #{succeed},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from shop_mall.login_log
        where id = #{id}
    </delete>

    <select id="queryList" resultMap="BaseResultMap">
        selectll
                .
                *
                ,su.nickname
        from login_log ll
                left join sys_user su on su.id = ll.u_id
                limit
                #{offset}
                ,
                #{limit}
                order
                by
                create_date
                desc
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.laky.sirius.ums.dao.UserCartDao">

    <resultMap id="BaseResultMap" type="club.laky.sirius.ums.entity.UserCart">
        <!--@Table user_cart-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="uId" column="u_id" jdbcType="INTEGER"/>

        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="goodsName" column="goodsName" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, goods_id, count, u_id
        from shop_mall.user_cart
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, goods_id, count, u_id
        from shop_mall.user_cart
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, goods_id, count, u_id
        from shop_mall.user_cart
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into shop_mall.user_cart(goods_id, count, u_id)
        values (#{goodsId}, #{count}, #{uId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update shop_mall.user_cart
        <set>
            <if test="goodsId != null">
                goods_id = #{goodsId},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="uId != null">
                u_id = #{uId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from shop_mall.user_cart where id = #{id}
    </delete>

</mapper>